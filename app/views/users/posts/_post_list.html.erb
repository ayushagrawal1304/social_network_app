<p><h3> Posts </h3></p>
<% if posts.present? %>
	<table class="table">
		<thead class="thead-dark">
	    <tr>
	      <th scope="col">Posted By</th>
	      <th scope="col">Created On</th>
	      <th scope="col">Title</th>
	      <th scope="col">  Open</th>
	    </tr>
	  </thead>
	  
	  <tbody>
	  <% posts.each do |post| %>
	    <tr>
	      <td><%= User.user_name(post.user_id).map(&:first_name)[0] %></td>
	      <td><%= post.created_at %></td>
	      <td><%= post.title %></td>
	      <td><%= link_to 'Show', users_community_post_path(community_id,post.id) %></td>
	    </tr>
	  <% end %>
	  </tbody>
	</table>
<%end%>