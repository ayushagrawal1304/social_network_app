<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<h1 align="center"> Add Post</h1>

	<div class = "padding_left">
		<%= link_to 'Home', users_dashboards_index_path, class: 'btn btn-primary' %>
	</div>

	<div class = "button_padding_left">
		<%= link_to 'Profile', edit_user_registration_path(current_user), class: 'btn btn-primary' %>
	</div>

	<div class = "button_padding_left">
 		<%= link_to 'Sign Out', destroy_user_session_path, method: "delete", class: 'btn btn-primary' %>
 	</div>
</nav>

<div class="container">
  <div class="sign_up">
	<%= form_with model: @post, url: users_community_posts_path do |f| %>

		<%= f.label :title %>
		<p><%= f.text_field :title, required: true, class: "form-control" %></p>
		<p><%= f.text_area :content, required: true, class:"form-control", placeholder: "Post content "  %></p>
	  <p><%= f.file_field :attachments, required: true, multiple: true %></p>
	  <p><%= f.submit "Add Post",class: "btn btn-success" %></p>
	<%end%>
	</div>
</div>