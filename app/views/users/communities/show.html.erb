  <div class="sign_up">
		<h1 align="center"> <%= @community.name %> </h1>
	</div>
</nav>

<div class="container">
  <div class="sign_up">
		<%= form_with model: @approval, url: users_invitations_path(community_id: @community.id) do |f| %>
			<div class="form-group">
			   <br> <%= select_tag(:user_id, options_for_select(invite_user_options(@community.id)), { class: 'form-control'}) %></br>
			</div>

			<div class="actions">
			  	<br><%= f.submit "Invite", class: "btn btn-primary"%></br>
			</div>

		<% end %>

  </div>
</div>
