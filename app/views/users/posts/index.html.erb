<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<h1 align="center"> <%= @community.name.capitalize %> </h1>

	<div class = "padding_left">
		<%= link_to 'Add Post', new_users_community_post_path, class: 'btn btn-primary' %>
	</div>

	<div class = "button_padding_left">
		<%= link_to 'Home', users_dashboards_index_path, class: 'btn btn-primary' %>
	</div>

	<div class = "button_padding_left">
		<%= link_to 'Profile', edit_user_registration_path(current_user), class: 'btn btn-primary' %>
	</div>

	<div class = "button_padding_left">
 		<%= link_to 'Sign Out', destroy_user_session_path, method: "delete", class: 'btn btn-primary' %>
 	</div>

</nav>

<p><h3> Posts </h3></p>
<% if !@post.empty? %>
	<table class="table">
		<thead class="thead-dark">
	    <tr>
	      <th scope="col">Posted By</th>
	      <th scope="col">Created On</th>
	      <th scope="col">Title</th>
	      <th scope="col">  Open</th>
	    </tr>
	  </thead>
	  
	  <tbody>
	  <% @post.each do |post| %>
	    <tr>
	      <td><%= User.user_name(post.user_id).map(&:first_name)[0] %></td>
	      <td><%= post.created_at %></td>
	      <td><%= post.title %></td>
	      <td><%= link_to 'Show', users_community_post_path(@community.id,post.id) %></td>
	    </tr>
	  <% end %>
	  </tbody>
	</table>
<%end%>

<%= will_paginate @post, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, previous_label: "Previous", next_label: "Next" %>

