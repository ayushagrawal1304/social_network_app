<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <h1 align="center">Create Communities</h1> 
  
  <div class = "padding_left">
    <%= link_to 'Home', users_dashboards_index_path, class: 'btn btn-primary' %>
  </div>
 
  <div class = "button_padding_left">
    <%= link_to 'Profile', edit_user_registration_path(current_user), class: 'btn btn-primary' %>
  </div>
  
  <div class = "button_padding_left">
    <%= link_to 'Sign Out', destroy_user_session_path, method: "delete", class: 'btn btn-primary' %>
  </div>
</nav>

<div class="container">
  <div class="sign_up">
    <%= form_with scope: :community,url: users_communities_path, local: true do |f| %>
      <div class="form-group">
        <br><%= f.label :community_name %></br>
        <%= f.text_field :name, required: true, class: 'form-control', placeholder: 'Enter community name' %>
      </div>
      
      <div class="actions">
        <%= f.submit "Create", class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>


