<div class="modal" id="nestedModal" tabindex="-1" role="dialog" aria-labelledby="nestedModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="nestedModalLabel">Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
     
      <div class="modal-body">
        <%= form_with(model: @comment, url: users_community_post_comments_path(community_id,post_id, commentable_id: commentable_id), local: true) do |f| %>

          <div class="form-group">
             <br> <%= f.label :add_comment %></br>
						 <p><%= f.text_area :comment, class:"form-control", placeholder: "write comments here... "  %></p>
          </div>

          <div class="modal-footer">
            <br><%= f.submit "Add comment",class: "btn btn-success" %></br>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>