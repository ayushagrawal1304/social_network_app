<nav class="navbar navbar-expand-lg navbar-light bg-light">
<h1>Joined Communities</h1> &nbsp;&nbsp;
  
	<div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Communities</button>&nbsp;&nbsp;
    <div class="dropdown-menu">
      <%= link_to 'My Communities', my_communities_users_dashboard_path(current_user.id), class: 'dropdown-item' %>
      <%= link_to 'Joined Communities', joined_communities_users_dashboard_path(current_user.id), class: 'dropdown-item' %>
    </div>
  </div>

  <%= link_to 'Home', users_dashboards_index_path, class: 'btn btn-primary' %>&nbsp;&nbsp;
 
  <%= link_to 'Profile', edit_user_registration_path(current_user), class: 'btn btn-primary' %>&nbsp;&nbsp;

  <%= link_to 'Sign Out', destroy_user_session_path, method: "delete", class: 'btn btn-primary' %>&nbsp;&nbsp;

</nav>

<br></br>

<% if @communities.empty? %>
  <p>You have not joined any communities</p>

<% else %>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Community Name</th>
        <th scope="col">Created On</th>
        <th scope="col">Open</th>
      </tr>
    </thead>
    
    <tbody>
    <% @communities.each do |com| %>  
      <tr>
        <td><%= com.name %></td>
        <td><%= com.created_at %></td>
        <td><%= link_to 'Show', users_community_posts_path({community_id: com})%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<%end%>

<%= will_paginate @communities, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, previous_label: "Previous", next_label: "Next" %>